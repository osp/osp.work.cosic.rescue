%
% (a), (b) - Superpositions of 5 line gratings:
%
% The grating parameters are as follows:
% 
% theta1,...,theta5 - the grating angles, in degrees.
% p1,...,p5 - the respective grating periods, in deciinches.
% xshifti - the period-shifts for the i-th grating, in terms of period fractions.
% len - the length of each of the gratings, in centiinches.
% wid - the width of each of the gratings, in centiinches.
%
% ********************************************************************************
%


/inch {72 mul} def
/centiinch {0.72 mul} def
0.6 centiinch setlinewidth


/len 200 def		% grating length in centiinches
/wid 200 def		% grating width in centiinches
/len2 len 2 div def
/wid2 wid 2 div def


/Helvetica findfont
9 scalefont setfont


1.05 inch 2 inch translate
gsave


% ******************************** Fig. (a):

/theta1 0 def		% angle of grating A
/theta2 72 def		% angle of grating B
/theta3 144 def		% angle of grating C
/theta4 216 def		% angle of grating D
/theta5 288 def		% angle of grating E

/rot 0 def		% general rotation to prevent printer artifacts

/p1 3 def		% period of grating A
/p2 3 def		% period of grating B
/p3 3 def		% period of grating C
/p4 3 def		% period of grating D
/p5 3 def		% period of grating E

/xshift1 0 p1 mul def		% period-shift of grating A (e.g. 0.5)
/xshift2 0 p2 mul def		% period-shift of grating B
/xshift3 0 p3 mul def		% period-shift of grating C
/xshift4 0 p3 mul def		% period-shift of grating D
/xshift5 0 p3 mul def		% period-shift of grating E


% Draw grating A:
gsave
1.2 inch 5.2 inch translate
theta1 rot add rotate
newpath
0 p1 len		% draw lines
{centiinch len2 p1 div round p1 mul xshift1 sub centiinch sub wid2 centiinch neg moveto
0 centiinch wid centiinch rlineto} for
stroke
-1.12 inch -1 inch moveto
(A) show
grestore


% Draw grating B:
gsave
1.2 inch 5.2 inch translate
theta2 rot add rotate
newpath
0 p2 len		% draw lines
{centiinch len2 p2 div round p2 mul xshift2 sub centiinch sub wid2 centiinch neg moveto
0 centiinch wid centiinch rlineto} for
stroke
-1.12 inch -1 inch moveto
(B) show
grestore


% Draw grating C:
gsave
1.2 inch 5.2 inch translate
theta3 rot add rotate
newpath
0 p3 len		% draw lines
{centiinch len2 p3 div round p3 mul xshift3 sub centiinch sub wid2 centiinch neg moveto
0 centiinch wid centiinch rlineto} for
stroke
-1.12 inch -1 inch moveto
(C) show
grestore


% Draw grating D:
gsave
1.2 inch 5.2 inch translate
theta4 rot add rotate
newpath
0 p4 len		% draw lines
{centiinch len2 p4 div round p4 mul xshift4 sub centiinch sub wid2 centiinch neg moveto
0 centiinch wid centiinch rlineto} for
stroke
-1.12 inch -1 inch moveto
(D) show
grestore


% Draw grating E:
gsave
1.2 inch 5.2 inch translate
theta5 rot add rotate
newpath
0 p5 len		% draw lines
{centiinch len2 p5 div round p5 mul xshift5 sub centiinch sub wid2 centiinch neg moveto
0 centiinch wid centiinch rlineto} for
stroke
-1.12 inch -1 inch moveto
(E) show
grestore


gsave
1.2 inch 4.8 inch translate
-0.08 inch -1.28 inch moveto
/Times-Roman findfont
12 scalefont setfont
((a)) show
grestore



% ******************************** Fig. (b):

/theta1 0 def		% angle of grating A
/theta2 72 def		% angle of grating B
/theta3 143.4 def	% angle of grating C
/theta4 215.4 def	% angle of grating D
/theta5 287.4 def	% angle of grating E

/rot 0 def		% general rotation to prevent printer artifacts

/p1 3 def		% period of grating A
/p2 3 def		% period of grating B
/p3 3 def		% period of grating C
/p4 3 def		% period of grating D
/p5 3.1 def		% period of grating E

/xshift1 0 p1 mul def		% period-shift of grating A (e.g. 0.5)
/xshift2 0 p2 mul def		% period-shift of grating B
/xshift3 0 p3 mul def		% period-shift of grating C
/xshift4 0 p3 mul def		% period-shift of grating D
/xshift5 0 p3 mul def		% period-shift of grating E


% Draw grating A:
gsave
5.1 inch 5.2 inch translate
theta1 rot add rotate
newpath
0 p1 len		% draw lines
{centiinch len2 p1 div round p1 mul xshift1 sub centiinch sub wid2 centiinch neg moveto
0 centiinch wid centiinch rlineto} for
stroke
-1.12 inch -1 inch moveto
(A) show
grestore


% Draw grating B:
