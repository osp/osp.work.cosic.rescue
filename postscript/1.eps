%!PS-Adobe-3.0 EPSF-3.0
%%BoundingBox: 0 0 300 300

% circle1:
% 	period linewidth radius circle1 -

/circle1 {
	/rot exch def
	/radius exch def
	/thick exch def
	/period exch def 
	gsave
		2 2 scale
		0 0 translate
		thick setlinewidth

		rot rotate
		newpath
			%radius neg radius neg radius 0 360 arc
			0 0 radius 0 360 arc
		closepath clip newpath
		
		radius 1 add {
			radius neg radius neg moveto
			0 period translate
			radius 2 mul 0 rlineto
			stroke
		} repeat
	grestore
} def

/debugorig {
	newpath
	0 0 2 0 360 arc
	closepath stroke
} def

200 200 translate
2 0.7 30 40 circle1

showpage
