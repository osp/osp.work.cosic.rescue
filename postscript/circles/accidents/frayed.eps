%!PS-Adobe-3.0 EPSF-3.0
%%BoundingBox: 0 0 300 300

% circle2
%		period linewidth radius rotation circle2 -

/circle2 {
	/rot exch def
	/radius exch def
	/thick exch def
	/period exch def
	gsave
		2 2 scale
		0 0 translate
		thick setlinewidth

		newpath
			0 0 radius 0 360 arc
		closepath clip newpath
	
		80 {
			gsave
				10 {
					radius neg radius neg moveto
					6 6 6 -6 12 0 curveto
					stroke
					12 0 translate
				} repeat
			grestore
			radius neg 0 moveto
			radius neg period translate
		} repeat
	grestore
} def

200 200 translate
2 1 40 40 circle2

showpage
