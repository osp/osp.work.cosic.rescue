%%Explanation
%%x'=rcos(phi+theta)=r(cos(phi)cos(theta)-sin(phi)sin(theta))
%%y'=rsin(phi+theat)=r(cos(phi)sin(theta)+sin(phi)sin(theta))
%%=>
%%/x'\  / cos(phi)  -sin(phi) \  /x\
%%|  |= |                     |  | |
%%\y'/  \ sin(phi)   cos(phi) /  \y/
%/rotdict 6 dict def



% circle1:
% 	period linewidth radius circle1 -

/circle1 {
	/rota exch def
	/radius exch def
	/thick exch def
	/period exch def 
	gsave
		2 2 scale
		thick setlinewidth

		%40 0 translate
		%rota rotate

		newpath
			40 40 radius 0 360 arc
		closepath clip newpath

		42 {
			0 0 moveto
			0 period translate
			80 0 rlineto
		} repeat
		stroke

	grestore
} def

% circle2
%		period linewidth radius circle2 -

/circle2 {
	/rota exch def
	/radius exch def
	/thick exch def
	/period exch def
	gsave
		2 2 scale
		thick setlinewidth

		newpath
			40 40 radius 0 360 arc
		closepath clip newpath
		42 {
			gsave
				10 {
					0 0 moveto
					6 6 6 -6 12 0 curveto
					stroke
					12 0 translate
				} repeat
			grestore
			0 0 moveto
			0 period translate
		} repeat
	grestore
} def


gsave
	21 21 translate

	gsave
		2 1 40 42 circle1
	grestore

	2 1 30 42 circle2
grestore

showpage
